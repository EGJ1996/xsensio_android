<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Extended mode:"
                android:gravity="center_vertical" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/extended_mode_enabled_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Enabled"/>
                <RadioButton android:id="@+id/extended_mode_disabled_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Disabled"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Power mode: "
            android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/power_mode_sp"
                android:layout_width="match_parent"
                android:layout_height="50sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Voltage: "
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/voltage_sp"
                android:layout_width="match_parent"
                android:layout_height="50sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Output resistance: "
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/output_resistance_sp"
                android:layout_width="match_parent"
                android:layout_height="50sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/config_block1_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Block 7C"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/config_block2_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Block 7D"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/config_block3_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Block 7E"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/config_block4_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Block 7F"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
